    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run all Tests",
            "type": "dart",
            "request": "launch",
            "program": "./test/"
        },
        {
            "name": "Launch Development",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_dev.dart",
            "args": [
                "--flavor",
                "development",
                "--target",
                "lib/main_dev.dart"
            ]
        },
        {
            "name": "Launch Staging",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile",
            "program": "lib/main_stag.dart",
            "args": [
                "--flavor",
                "staging",
                "--target",
                "lib/main_stag.dart"
            ]
        },
        {
            "name": "Launch Production",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "program": "lib/main.dart",
            "args": [
                "--flavor",
                "production",
                "--target",
                "lib/main.dart"
            ]
        }
    ]
}